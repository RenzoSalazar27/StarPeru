        function registrarVuelo() {
            // Limpiar mensajes de error anteriores
            document.querySelectorAll('.text-danger').forEach(el => el.style.display = 'none');
            
            const origen = document.getElementById('origenVuelo').value;
            const destino = document.getElementById('destinoVuelo').value;
            const fecha = document.getElementById('fechaVuelo').value;
            const precio = document.getElementById('precioVuelo').value;
            const idAvion = document.getElementById('idAvion').value;
            const idPiloto = document.getElementById('idPiloto').value;

            let hayErrores = false;

            // Validaciones individuales
            if (!origen) {
                document.getElementById('errorOrigen').textContent = 'El origen es obligatorio';
                document.getElementById('errorOrigen').style.display = 'block';
                hayErrores = true;
            }

            if (!destino) {
                document.getElementById('errorDestino').textContent = 'El destino es obligatorio';
                document.getElementById('errorDestino').style.display = 'block';
                hayErrores = true;
            }

            if (!fecha) {
                document.getElementById('errorFecha').textContent = 'La fecha es obligatoria';
                document.getElementById('errorFecha').style.display = 'block';
                hayErrores = true;
            }

            if (!precio) {
                document.getElementById('errorPrecio').textContent = 'El precio es obligatorio';
                document.getElementById('errorPrecio').style.display = 'block';
                hayErrores = true;
            }

            if (!idAvion) {
                document.getElementById('errorAvion').textContent = 'El avión es obligatorio';
                document.getElementById('errorAvion').style.display = 'block';
                hayErrores = true;
            }

            if (!idPiloto) {
                document.getElementById('errorPiloto').textContent = 'El piloto es obligatorio';
                document.getElementById('errorPiloto').style.display = 'block';
                hayErrores = true;
            }

            if (hayErrores) {
                $('#modalRegistrarVuelo').modal('hide'); // Cierra el modal si hay errores del lado del cliente
                return;
            }

            const vuelo = {
                origenVuelo: origen,
                destinoVuelo: destino,
                fechaVuelo: fecha,
                precioVuelo: parseFloat(precio),
                idAvion: idAvion ? parseInt(idAvion) : null,
                idPiloto: idPiloto ? parseInt(idPiloto) : null
            };

            fetch('/Home/RegistrarVuelo', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(vuelo)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    document.getElementById('formVuelo').reset();
                    cargarVuelos();
                } else {
                    if (data.errors) {
                        Object.keys(data.errors).forEach(key => {
                            const errorElement = document.getElementById(`error${key.charAt(0).toUpperCase() + key.slice(1)}`);
                            if (errorElement) {
                                errorElement.textContent = data.errors[key];
                                errorElement.style.display = 'block';
                            }
                        });
                    } else {
                        document.getElementById('errorGeneral').textContent = data.message;
                        document.getElementById('errorGeneral').style.display = 'block';
                    }
                }
                $('#modalRegistrarVuelo').modal('hide'); // Cierra el modal después de la respuesta del servidor
            })
            .catch(error => {
                console.error('Error:', error);
                document.getElementById('errorGeneral').textContent = 'Error al registrar el vuelo';
                document.getElementById('errorGeneral').style.display = 'block';
                $('#modalRegistrarVuelo').modal('hide'); // Cierra el modal si hay un error en la petición
            });
        }

