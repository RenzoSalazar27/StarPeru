    <script src="~/js/vozPorTexto.js" asp-append-version="true"></script>
    <script src="~/js/vozNavegacion.js" asp-append-version="true"></script>
    <script src="~/js/daltonismo.js" asp-append-version="true"></script>
    <script>
        // Crear partículas flotantes para el menú
        function createMenuParticles() {
            const particlesContainer = document.getElementById('menuParticles');
            const particleCount = 15;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'menu-particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.width = Math.random() * 8 + 3 + 'px';
                particle.style.height = particle.style.width;
                particle.style.animationDelay = Math.random() * 6 + 's';
                particle.style.animationDuration = (Math.random() * 3 + 3) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            const hamburger = document.querySelector('.hamburger');
            const menuOptions = document.getElementById('menuOptions');
            const menuOverlay = document.getElementById('menuOverlay');
            
            // Crear partículas del menú
            createMenuParticles();
            
            // Inicializar daltonismo desde localStorage
            initializeDaltonism();
            
            function toggleMenu() {
                menuOptions.classList.toggle('show');
                menuOverlay.classList.toggle('show');
                document.body.style.overflow = menuOptions.classList.contains('show') ? 'hidden' : '';
                
                // Efecto de rotación del icono hamburguesa
                const icon = hamburger.querySelector('i');
                if (menuOptions.classList.contains('show')) {
                    icon.style.transform = 'rotate(180deg)';
                } else {
                    icon.style.transform = 'rotate(0deg)';
                }
            }
            
            hamburger.addEventListener('click', toggleMenu);
            menuOverlay.addEventListener('click', toggleMenu);

            // Función para inicializar daltonismo
            function initializeDaltonism() {
                const isEnabled = localStorage.getItem('daltonismEnabled') === 'true';
                const daltonismType = localStorage.getItem('daltonismType') || 'default';
                
                if (daltonismToggle) {
                    daltonismToggle.checked = isEnabled;
                    if (isEnabled) {
                        daltonismDropdown.style.display = 'block';
                        // Actualizar texto del dropdown
                        updateDropdownText(daltonismType);
                        // Aplicar filtro si no es default
                        if (daltonismType !== 'default') {
                            applyDaltonismFilter(daltonismType);
                        }
                    }
                }
            }

            // Función para actualizar texto del dropdown
            function updateDropdownText(daltonismType) {
                const typeNames = {
                    'default': 'Por defecto',
                    'protanopia': 'Protanopía (Ceguera al Rojo)',
                    'protanomaly': 'Protanomalía (Debilidad al Rojo)',
                    'deuteranopia': 'Deuteranopía (Ceguera al Verde)',
                    'deuteranomaly': 'Deuteranomalía (Debilidad al Verde)',
                    'tritanopia': 'Tritanopía (Ceguera al Azul)',
                    'tritanomaly': 'Tritanomalía (Debilidad al Azul)',
                    'achromatopsia': 'Acromatopsia (Monocromatismo)'
                };
                if (daltonismOptionsDropdown) {
                    daltonismOptionsDropdown.textContent = typeNames[daltonismType] || 'Seleccionar tipo';
                }
            }

            // Manejo del dropdown de daltonismo
            const daltonismToggle = document.getElementById('daltonismToggle');
            const daltonismDropdown = document.getElementById('daltonismDropdown');
            const daltonismOptionsDropdown = document.getElementById('daltonismOptionsDropdown');
            const daltonismMenu = document.getElementById('daltonismMenu');

            if (daltonismToggle && daltonismDropdown) {
                daltonismToggle.addEventListener('change', function() {
                    if (this.checked) {
                        daltonismDropdown.style.display = 'block';
                        // Aplicar el filtro actual si hay uno seleccionado
                        const currentType = localStorage.getItem('daltonismType') || 'default';
                        if (currentType !== 'default') {
                            applyDaltonismFilter(currentType);
                        }
                    } else {
                        daltonismDropdown.style.display = 'none';
                        // Restaurar a por defecto cuando se desactiva
                        applyDaltonismFilter('default');
                        localStorage.setItem('daltonismEnabled', 'false');
                    }
                });
            }

            if (daltonismOptionsDropdown && daltonismMenu) {
                daltonismOptionsDropdown.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    // Obtener la posición del botón
                    const buttonRect = this.getBoundingClientRect();
                    
                    // Forzar visibilidad del dropdown
                    if (daltonismMenu.style.display === 'none' || daltonismMenu.style.display === '') {
                        daltonismMenu.style.display = 'block';
                        daltonismMenu.style.visibility = 'visible';
                        daltonismMenu.style.opacity = '1';
                        daltonismMenu.classList.add('show', 'force-show');
                        
                        // Forzar z-index extremadamente alto y posicionamiento
                        daltonismMenu.style.zIndex = '9999999';
                        daltonismMenu.style.position = 'fixed';
                        daltonismMenu.style.top = (buttonRect.bottom + 5) + 'px';
                        daltonismMenu.style.left = buttonRect.left + 'px';
                        daltonismMenu.style.minWidth = buttonRect.width + 'px';
                        daltonismMenu.style.background = 'white';
                        daltonismMenu.style.border = '1px solid rgba(0,0,0,0.1)';
                        daltonismMenu.style.borderRadius = '10px';
                        daltonismMenu.style.boxShadow = '0 10px 25px rgba(0,0,0,0.1)';
                        
                        // Asegurar que esté por encima de todo
                        daltonismMenu.style.pointerEvents = 'auto';
                        daltonismMenu.style.maxHeight = '300px';
                        daltonismMenu.style.overflowY = 'auto';
                        
                        // Forzar que esté por encima de cualquier elemento
                        document.body.appendChild(daltonismMenu);
                    } else {
                        daltonismMenu.style.display = 'none';
                        daltonismMenu.classList.remove('show', 'force-show');
                    }
                });

                // Cerrar dropdown al hacer clic fuera
                document.addEventListener('click', function(e) {
                    if (daltonismDropdown && !daltonismDropdown.contains(e.target) && !daltonismMenu.contains(e.target)) {
                        daltonismMenu.style.display = 'none';
                        daltonismMenu.classList.remove('show', 'force-show');
                    }
                });

                // Manejar selección de opciones de daltonismo
                const daltonismItems = daltonismMenu.querySelectorAll('.dropdown-item');
                daltonismItems.forEach(item => {
                    item.addEventListener('click', function(e) {
                        e.preventDefault();
                        e.stopPropagation();
                        const daltonismType = this.getAttribute('data-daltonism');
                        
                        // Actualizar el texto del botón
                        daltonismOptionsDropdown.textContent = this.textContent;
                        
                        // Aplicar el filtro de daltonismo
                        applyDaltonismFilter(daltonismType);
                        
                        // Cerrar el dropdown inmediatamente
                        daltonismMenu.style.display = 'none';
                        daltonismMenu.classList.remove('show', 'force-show');
                        
                        console.log('Tipo de daltonismo seleccionado:', daltonismType);
                    });
                });
            }

            // Función para aplicar filtro de daltonismo
            function applyDaltonismFilter(daltonismType) {
                console.log('Aplicando filtro de daltonismo:', daltonismType);
                
                // Remover todas las clases de daltonismo del body
                document.body.classList.remove(
                    'daltonismo-protanopia',
                    'daltonismo-protanomaly',
                    'daltonismo-deuteranopia',
                    'daltonismo-deuteranomaly',
                    'daltonismo-tritanopia',
                    'daltonismo-tritanomaly',
                    'daltonismo-achromatopsia',
                    'daltonismo-default'
                );
                
                // Aplicar la clase correspondiente
                if (daltonismType !== 'default') {
                    document.body.classList.add(`daltonismo-${daltonismType}`);
                    console.log(`Clase aplicada: daltonismo-${daltonismType}`);
                } else {
                    console.log('Restaurando colores por defecto');
                }
                
                // Guardar en localStorage
                localStorage.setItem('daltonismType', daltonismType);
                localStorage.setItem('daltonismEnabled', 'true');
                
                // Forzar repaint del body para asegurar que el filtro se aplique
                document.body.style.display = 'none';
                document.body.offsetHeight; // Trigger reflow
                document.body.style.display = '';
                
                console.log('Filtro aplicado. Clases del body:', document.body.className);
            }
        });

        function closeMenu() {
            const menuOptions = document.getElementById('menuOptions');
            const menuOverlay = document.getElementById('menuOverlay');
            const hamburger = document.querySelector('.hamburger');
            const icon = hamburger.querySelector('i');
            
            menuOptions.classList.remove('show');
            menuOverlay.classList.remove('show');
            document.body.style.overflow = '';
            icon.style.transform = 'rotate(0deg)';
        }
    </script>
