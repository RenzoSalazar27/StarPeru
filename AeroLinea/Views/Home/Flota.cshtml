@model IEnumerable<AeroLinea.Models.Flota>
@{
    ViewData["Title"] = "Flota";
}

<style>
    body {
        background: linear-gradient(135deg, #e14a4a 0%, #ff6b6b 100%);
        min-height: 100vh;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .header {
        text-align: center;
        margin-bottom: 40px;
        padding: 30px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .header h1 {
        color: white;
        font-size: 2.5em;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
    }

    .aircraft {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        padding: 20px;
    }

    .aircraft-item {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        position: relative;
    }

    .aircraft-item:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 40px rgba(0,0,0,0.2);
    }

    .aircraft-item img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        border-bottom: 3px solid #e14a4a;
    }

    .aircraft-info {
        padding: 25px;
    }

    .aircraft-info h2 {
        color: #e14a4a;
        font-size: 1.8em;
        margin-bottom: 20px;
        border-bottom: 2px solid #ff6b6b;
        padding-bottom: 10px;
    }

    .aircraft-info p {
        color: #555;
        margin: 12px 0;
        font-size: 1.1em;
        display: flex;
        align-items: center;
    }

    .aircraft-info strong {
        color: #e14a4a;
        min-width: 120px;
        font-weight: 600;
    }

    @@media (max-width: 768px) {
        .aircraft {
            grid-template-columns: 1fr;
            padding: 10px;
        }

        .header {
            margin-bottom: 20px;
            padding: 20px;
        }

        .header h1 {
            font-size: 2em;
        }

        .aircraft-info h2 {
            font-size: 1.5em;
        }

        .aircraft-info p {
            font-size: 1em;
        }
    }
</style>

<div class="header">
    <h1>Nuestra Flota</h1>
</div>

<div class="aircraft">
    @foreach (var avion in Model)
    {
        <div class="aircraft-item">
            <img src="~/img/@(avion.modeloAvion.ToLower()).jpg" alt="@avion.modeloAvion">
            <div class="aircraft-info">
                <h2>@avion.modeloAvion</h2>
                <p><strong>Fabricante:</strong> @avion.fabricanteAvion</p>
                <p><strong>Matrícula:</strong> @avion.matriculaAvion</p>
                <p><strong>Capacidad:</strong> @avion.capacidadAvion pasajeros</p>
                <p><strong>Clase:</strong> @avion.claseAvion</p>
            </div>
        </div>
    }
</div>

<link rel="stylesheet" href="~/css/Home/flota.css" />