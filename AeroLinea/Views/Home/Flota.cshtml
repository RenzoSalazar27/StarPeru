@model IEnumerable<AeroLinea.Models.Flota>
@{
    ViewData["Title"] = "Flota";
}

<style>
    body {
        background: linear-gradient(135deg, #e14a4a 0%, #ff6b6b 100%);
        min-height: 100vh;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .header {
        text-align: center;
        margin-bottom: 40px;
        padding: 40px 30px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 25px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        position: relative;
        overflow: hidden;
    }

    .header::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
        transition: left 0.6s ease;
    }

    .header:hover::before {
        left: 100%;
    }

    .header h1 {
        color: white;
        font-size: 3em;
        margin: 0;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        position: relative;
        z-index: 1;
    }

    .aircraft {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 30px;
        padding: 20px;
        max-width: 1400px;
        margin: 0 auto;
    }

    .aircraft-item {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        position: relative;
        opacity: 0;
        transform: translateY(30px);
        animation: fadeInUp 0.8s ease forwards;
    }

    .aircraft-item:nth-child(1) { animation-delay: 0.1s; }
    .aircraft-item:nth-child(2) { animation-delay: 0.2s; }
    .aircraft-item:nth-child(3) { animation-delay: 0.3s; }
    .aircraft-item:nth-child(4) { animation-delay: 0.4s; }
    .aircraft-item:nth-child(5) { animation-delay: 0.5s; }
    .aircraft-item:nth-child(6) { animation-delay: 0.6s; }

    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .aircraft-item::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #e14a4a, #ff6b6b);
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    .aircraft-item:hover {
        transform: translateY(-8px) scale(1.02);
        box-shadow: 0 25px 50px rgba(0,0,0,0.15);
    }

    .aircraft-item:hover::before {
        transform: scaleX(1);
    }

    .aircraft-item img {
        width: 100%;
        height: 280px;
        object-fit: cover;
        transition: transform 0.3s ease;
        border-bottom: 3px solid transparent;
        background: linear-gradient(45deg, #e14a4a, #ff6b6b);
        padding: 3px;
    }

    .aircraft-item:hover img {
        transform: scale(1.05);
    }

    .aircraft-info {
        padding: 30px;
        position: relative;
    }

    .aircraft-info::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(225, 74, 74, 0.02) 0%, rgba(255, 107, 107, 0.02) 100%);
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .aircraft-item:hover .aircraft-info::before {
        opacity: 1;
    }

    .aircraft-info h2 {
        color: #e14a4a;
        font-size: 1.8em;
        margin-bottom: 25px;
        border-bottom: 2px solid #ff6b6b;
        padding-bottom: 15px;
        font-weight: 600;
        position: relative;
        z-index: 1;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .aircraft-info h2::before {
        content: '✈️';
        font-size: 0.8em;
    }

    .aircraft-info p {
        color: #555;
        margin: 15px 0;
        font-size: 1.1em;
        display: flex;
        align-items: center;
        position: relative;
        z-index: 1;
        transition: transform 0.2s ease;
    }

    .aircraft-item:hover .aircraft-info p {
        transform: translateX(5px);
    }

    .aircraft-info strong {
        color: #e14a4a;
        min-width: 120px;
        font-weight: 600;
        background: linear-gradient(45deg, #e14a4a, #ff6b6b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .aircraft-info p::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: -2px;
        width: 0;
        height: 2px;
        background: linear-gradient(90deg, #e14a4a, #ff6b6b);
        transition: width 0.3s ease;
    }

    .aircraft-item:hover .aircraft-info p::after {
        width: 100%;
    }

    /* Efecto de brillo en hover */
    .aircraft-item::after {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
        transition: left 0.5s ease;
    }

    .aircraft-item:hover::after {
        left: 100%;
    }

    @@media (max-width: 768px) {
        .aircraft {
            grid-template-columns: 1fr;
            padding: 10px;
            gap: 20px;
        }

        .header {
            margin-bottom: 20px;
            padding: 30px 20px;
            border-radius: 20px;
        }

        .header h1 {
            font-size: 2.2em;
        }

        .aircraft-info h2 {
            font-size: 1.5em;
        }

        .aircraft-info p {
            font-size: 1em;
        }

        .aircraft-item img {
            height: 220px;
        }
    }

    /* Animación de carga */
    .loading {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 200px;
    }

    .loading::after {
        content: '';
        width: 40px;
        height: 40px;
        border: 4px solid rgba(255, 255, 255, 0.3);
        border-top: 4px solid #e14a4a;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    @@keyframes spin {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }
</style>

<div class="header">
    <h1>Nuestra Flota</h1>
</div>

<div class="aircraft">
    @foreach (var avion in Model)
    {
        var imagenAvion = "";
        switch (avion.claseAvion)
        {
            case "Económica":
                imagenAvion = "flotaBarato.png";
                break;
            case "Ejecutiva":
                imagenAvion = "flotaEjecutivo.png";
                break;
            case "Primera clase":
                imagenAvion = "flotaPrimera.png";
                break;
            default:
                imagenAvion = "flotaBarato.png"; // Usar una imagen existente como por defecto
                break;
        }

        <div class="aircraft-item">
            <img src="~/img/@(imagenAvion)" alt="@avion.modeloAvion">
            <div class="aircraft-info">
                <h2>@avion.modeloAvion</h2>
                <p><strong>Fabricante:</strong> @avion.fabricanteAvion</p>
                <p><strong>Matrícula:</strong> @avion.matriculaAvion</p>
                <p><strong>Capacidad:</strong> @avion.capacidadAvion pasajeros</p>
                <p><strong>Clase:</strong> @avion.claseAvion</p>
            </div>
        </div>
    }
</div>

<link rel="stylesheet" href="~/css/Home/flota.css" />