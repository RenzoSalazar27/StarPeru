@model IEnumerable<AeroLinea.Models.Flota>
@{
    ViewData["Title"] = "Flota";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes" />
    <title>Nuestra Flota - StarPerú</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

    body {
            background: linear-gradient(135deg, #e14a4a 0%, #ff6b6b 25%, #FF2E4E 50%, #2c3e50 75%, #34495e 100%);
            background-size: 400% 400%;
            animation: gradientShift 20s ease infinite;
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        @@keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* Partículas flotantes */
        .floating-particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .particle {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 8s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-30px) rotate(180deg); }
        }

        /* Header moderno */
        .page-header {
        text-align: center;
            margin-bottom: 50px;
            padding: 60px 40px;
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(25px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 30px;
            box-shadow: 0 25px 50px rgba(0,0,0,0.15);
            position: relative;
            overflow: hidden;
            animation: fadeInUp 1s ease-out;
        }

        .page-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
            transition: left 0.8s ease;
        }

        .page-header:hover::before {
            left: 100%;
        }

        .page-title {
        color: white;
            font-size: 4em;
            font-weight: 800;
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            position: relative;
            z-index: 1;
            background: linear-gradient(45deg, #fff, #f0f0f0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .page-subtitle {
            color: rgba(255,255,255,0.9);
            font-size: 1.3em;
            font-weight: 300;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
            position: relative;
            z-index: 1;
        }

        /* Contenedor principal */
        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Grid de aeronaves */
        .aircraft-grid {
        display: grid;
            grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
            gap: 35px;
        padding: 20px;
    }

        /* Tarjetas de aeronaves */
        .aircraft-card {
        background: rgba(255, 255, 255, 0.95);
            border-radius: 25px;
        overflow: hidden;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            border: 1px solid rgba(255, 255, 255, 0.2);
        position: relative;
            opacity: 0;
            transform: translateY(40px);
            animation: fadeInUp 0.8s ease forwards;
        }

        .aircraft-card:nth-child(1) { animation-delay: 0.1s; }
        .aircraft-card:nth-child(2) { animation-delay: 0.2s; }
        .aircraft-card:nth-child(3) { animation-delay: 0.3s; }
        .aircraft-card:nth-child(4) { animation-delay: 0.4s; }
        .aircraft-card:nth-child(5) { animation-delay: 0.5s; }
        .aircraft-card:nth-child(6) { animation-delay: 0.6s; }

        @@keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Barra superior de la tarjeta */
        .aircraft-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #e14a4a, #ff6b6b, #FF2E4E);
            transform: scaleX(0);
            transition: transform 0.4s ease;
            z-index: 2;
        }

        .aircraft-card:hover {
            transform: translateY(-15px) scale(1.03);
            box-shadow: 0 30px 60px rgba(0,0,0,0.2);
        }

        .aircraft-card:hover::before {
            transform: scaleX(1);
        }

        /* Imagen de la aeronave */
        .aircraft-image {
        width: 100%;
            height: 300px;
        object-fit: cover;
            transition: all 0.4s ease;
            position: relative;
            overflow: hidden;
        }

        .aircraft-image::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(225, 74, 74, 0.1) 0%, rgba(255, 107, 107, 0.1) 100%);
            opacity: 0;
            transition: opacity 0.3s ease;
            z-index: 1;
        }

        .aircraft-card:hover .aircraft-image {
            transform: scale(1.08);
        }

        .aircraft-card:hover .aircraft-image::before {
            opacity: 1;
        }

        /* Información de la aeronave */
        .aircraft-info {
            padding: 35px;
            position: relative;
            background: rgba(255, 255, 255, 0.98);
        }

        .aircraft-title {
            color: #e14a4a;
            font-size: 2.2em;
            font-weight: 700;
            margin-bottom: 25px;
            border-bottom: 3px solid #ff6b6b;
            padding-bottom: 15px;
            position: relative;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .aircraft-title::before {
            content: '✈️';
            font-size: 0.7em;
            animation: fly 2s ease-in-out infinite;
        }

        @@keyframes fly {
            0%, 100% { transform: translateX(0px); }
            50% { transform: translateX(5px); }
        }

        .aircraft-title::after {
            content: '';
            position: absolute;
            bottom: -3px;
            left: 0;
            width: 60px;
            height: 3px;
            background: linear-gradient(90deg, #e14a4a, #ff6b6b);
            border-radius: 2px;
        }

        .aircraft-detail {
            color: #333;
            margin: 20px 0;
            font-size: 1.1em;
            display: flex;
            align-items: center;
            position: relative;
            transition: all 0.3s ease;
            padding: 10px 0;
        }

        .aircraft-card:hover .aircraft-detail {
            transform: translateX(8px);
        }

        .detail-label {
            color: #e14a4a;
            min-width: 140px;
            font-weight: 600;
            background: linear-gradient(45deg, #e14a4a, #ff6b6b);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .detail-value {
            color: #555;
            font-weight: 500;
            flex: 1;
        }

        /* Efecto de brillo en hover */
        .aircraft-card::after {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.6s ease;
            z-index: 1;
        }

        .aircraft-card:hover::after {
            left: 100%;
        }

        /* Badges para clase de aeronave */
        .class-badge {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.9em;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-top: 10px;
        }

        .badge-economica {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
        }

        .badge-ejecutiva {
            background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
            color: #000;
        }

        .badge-primera {
            background: linear-gradient(135deg, #dc3545 0%, #e74c3c 100%);
            color: white;
        }

        /* Estadísticas de la flota */
        .fleet-stats {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 25px;
            padding: 40px;
            margin: 40px 0;
            text-align: center;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            animation: fadeInUp 1s ease-out;
        }

        .stats-title {
            color: white;
            font-size: 2.5em;
            font-weight: 700;
            margin-bottom: 30px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 30px;
            margin-top: 30px;
        }

        .stat-item {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 25px;
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }

        .stat-item:hover {
            transform: translateY(-5px);
            background: rgba(255, 255, 255, 0.2);
        }

        .stat-number {
            color: white;
            font-size: 2.5em;
            font-weight: 800;
            margin-bottom: 10px;
        }

        .stat-label {
            color: rgba(255, 255, 255, 0.9);
            font-size: 1.1em;
            font-weight: 500;
        }

        /* Responsividad */
        @@media (max-width: 768px) {
            .page-title {
                font-size: 2.8em;
            }

            .page-subtitle {
                font-size: 1.1em;
            }

            .aircraft-grid {
                grid-template-columns: 1fr;
                gap: 25px;
                padding: 15px;
    }

    .aircraft-info {
        padding: 25px;
    }

            .aircraft-title {
        font-size: 1.8em;
            }

            .aircraft-detail {
                font-size: 1em;
            }

            .detail-label {
        min-width: 120px;
            }

            .stats-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 20px;
            }

            .stat-number {
                font-size: 2em;
            }
        }

        @@media (max-width: 480px) {
            .page-title {
                font-size: 2.2em;
            }

            .aircraft-info {
            padding: 20px;
        }

            .aircraft-title {
            font-size: 1.5em;
        }

            .stats-grid {
                grid-template-columns: 1fr;
            }
    }
</style>
</head>
<body>
    <!-- Partículas flotantes -->
    <div class="floating-particles" id="particles"></div>

    <div class="container">
        <!-- Header de la página -->
        <div class="page-header">
            <h1 class="page-title">
                <i class="fas fa-plane me-3"></i>
                Nuestra Flota
            </h1>
            <p class="page-subtitle">Descubre nuestra moderna flota de aeronaves diseñada para tu comodidad y seguridad</p>
        </div>

        <!-- Estadísticas de la flota -->
        <div class="fleet-stats">
            <h2 class="stats-title">
                <i class="fas fa-chart-bar me-3"></i>
                Estadísticas de la Flota
            </h2>
            <div class="stats-grid">
                <div class="stat-item">
                    <div class="stat-number">@Model.Count()</div>
                    <div class="stat-label">Aeronaves</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">@Model.Sum(a => a.capacidadAvion)</div>
                    <div class="stat-label">Capacidad Total</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">@Model.Select(a => a.fabricanteAvion).Distinct().Count()</div>
                    <div class="stat-label">Fabricantes</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">@Model.Select(a => a.claseAvion).Distinct().Count()</div>
                    <div class="stat-label">Clases</div>
                </div>
            </div>
</div>

        <!-- Grid de aeronaves -->
        <div class="aircraft-grid">
    @foreach (var avion in Model)
    {
        var imagenAvion = "";
                var badgeClass = "";
                
        switch (avion.claseAvion)
        {
            case "Económica":
                imagenAvion = "flotaBarato.png";
                        badgeClass = "badge-economica";
                break;
            case "Ejecutiva":
                imagenAvion = "flotaEjecutivo.png";
                        badgeClass = "badge-ejecutiva";
                break;
            case "Primera clase":
                imagenAvion = "flotaPrimera.png";
                        badgeClass = "badge-primera";
                break;
            default:
                        imagenAvion = "flotaBarato.png";
                        badgeClass = "badge-economica";
                break;
        }

                <div class="aircraft-card">
                    <img src="~/img/@(imagenAvion)" alt="@avion.modeloAvion" class="aircraft-image">
            <div class="aircraft-info">
                        <h2 class="aircraft-title">@avion.modeloAvion</h2>
                        
                        <div class="aircraft-detail">
                            <span class="detail-label">
                                <i class="fas fa-industry"></i>
                                Fabricante:
                            </span>
                            <span class="detail-value">@avion.fabricanteAvion</span>
                        </div>
                        
                        <div class="aircraft-detail">
                            <span class="detail-label">
                                <i class="fas fa-id-card"></i>
                                Matrícula:
                            </span>
                            <span class="detail-value">@avion.matriculaAvion</span>
                        </div>
                        
                        <div class="aircraft-detail">
                            <span class="detail-label">
                                <i class="fas fa-users"></i>
                                Capacidad:
                            </span>
                            <span class="detail-value">@avion.capacidadAvion pasajeros</span>
                        </div>
                        
                        <div class="aircraft-detail">
                            <span class="detail-label">
                                <i class="fas fa-star"></i>
                                Clase:
                            </span>
                            <span class="detail-value">@avion.claseAvion</span>
                        </div>
                        
                        <div class="class-badge @badgeClass">
                            <i class="fas fa-plane me-2"></i>
                            @avion.claseAvion
                        </div>
            </div>
        </div>
    }
</div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Crear partículas flotantes
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 25;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.width = Math.random() * 12 + 6 + 'px';
                particle.style.height = particle.style.width;
                particle.style.animationDelay = Math.random() * 8 + 's';
                particle.style.animationDuration = (Math.random() * 4 + 4) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        // Inicializar efectos visuales
        document.addEventListener('DOMContentLoaded', function() {
            createParticles();
            
            // Efecto de aparición gradual para las tarjetas
            const cards = document.querySelectorAll('.aircraft-card');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, { threshold: 0.1 });

            cards.forEach(card => observer.observe(card));
        });
    </script>
</body>
</html>