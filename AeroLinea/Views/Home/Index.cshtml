@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StarPerú - Inicio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #e14a4a 0%, #ff6b6b 25%, #FF2E4E 50%, #2c3e50 75%, #34495e 100%);
            background-size: 400% 400%;
            animation: gradientShift 20s ease infinite;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        @@keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        /* Header moderno con carrusel */
        .hero-section {
            position: relative;
            height: 45vh;
            min-height: 350px;
            overflow: hidden;
            border-radius: 0 0 30px 30px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
        }

        .carousel {
            height: 100%;
            width: 100%;
            position: relative;
        }

        .carousel-inner {
            height: 100%;
            width: 100%;
            position: relative;
        }

        .carousel-item {
            height: 100%;
            width: 100%;
            position: relative;
            overflow: hidden;
        }

        .carousel-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: center center;
            filter: brightness(0.7);
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            display: block;
            min-width: 100%;
            min-height: 100%;
            max-width: none;
            max-height: none;
        }

        /* Ajustes específicos para diferentes imágenes */
        .carousel-item:nth-child(1) .carousel-img {
            object-position: center 25%;
        }

        .carousel-item:nth-child(2) .carousel-img {
            object-position: center 35%;
        }

        .carousel-caption {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(15px);
            border-radius: 20px;
            padding: 40px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            animation: fadeInUp 1s ease-out;
            text-align: center;
            max-width: 700px;
            width: 90%;
            z-index: 10;
        }

        .carousel-caption h1,
        .carousel-caption h2 {
            font-size: 3.5em;
            font-weight: 800;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
            margin-bottom: 20px;
            color: #ffffff;
        }

        .carousel-caption p {
            font-size: 1.3em;
            font-weight: 300;
            color: #ffffff;
        }

        .carousel-control-prev,
        .carousel-control-next {
            width: 60px;
            height: 60px;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 50%;
            border: 1px solid rgba(255, 255, 255, 0.3);
            margin: auto 20px;
            transition: all 0.3s ease;
        }

        .carousel-control-prev:hover,
        .carousel-control-next:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: scale(1.1);
        }

        /* Botones de navegación modernos */
        .navigation-buttons {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 25px;
            padding: 25px;
            margin: 30px auto;
            max-width: 800px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            animation: fadeInUp 1.2s ease-out;
        }

        .btn-modern {
            background: linear-gradient(135deg, #e14a4a 0%, #ff6b6b 100%);
            border: none;
            color: white;
            padding: 15px 30px;
            border-radius: 50px;
            font-weight: 600;
            font-size: 1.1em;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            margin: 10px;
            position: relative;
            overflow: hidden;
        }

        .btn-modern::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s ease;
        }

        .btn-modern:hover::before {
            left: 100%;
        }

        .btn-modern:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 10px 25px rgba(225, 74, 74, 0.4);
            color: white;
        }

        /* Panel informativo moderno */
        .info-panel {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            padding: 30px;
            margin: 30px auto;
            max-width: 1000px;
            text-align: center;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            animation: fadeInUp 1.4s ease-out;
        }

        .info-panel h5 {
            color: #ffffff;
            font-size: 1.8em;
            font-weight: 700;
            margin-bottom: 15px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        }

        /* Separadores modernos */
        .modern-separator {
            height: 3px;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.5), transparent);
            margin: 40px auto;
            max-width: 300px;
            border-radius: 2px;
        }

        /* Sección de destinos */
        .destinations-section {
            padding: 60px 0;
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(10px);
            margin: 40px 0;
        }

        .section-title {
            text-align: center;
            color: #ffffff;
            font-size: 3em;
            font-weight: 800;
            margin-bottom: 50px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            animation: fadeInUp 1.6s ease-out;
        }

        .destination-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            border: 1px solid rgba(255, 255, 255, 0.2);
            height: 100%;
            animation: fadeInUp 0.8s ease-out;
        }

        .destination-card:nth-child(1) { animation-delay: 0.1s; }
        .destination-card:nth-child(2) { animation-delay: 0.2s; }
        .destination-card:nth-child(3) { animation-delay: 0.3s; }
        .destination-card:nth-child(4) { animation-delay: 0.4s; }
        .destination-card:nth-child(5) { animation-delay: 0.5s; }
        .destination-card:nth-child(6) { animation-delay: 0.6s; }
        .destination-card:nth-child(7) { animation-delay: 0.7s; }

        .destination-card:hover {
            transform: translateY(-15px) scale(1.02);
            box-shadow: 0 25px 50px rgba(0,0,0,0.2);
        }

        .destination-card img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            transition: transform 0.6s ease;
        }

        .destination-card:hover img {
            transform: scale(1.1);
        }

        .card-body {
            padding: 25px;
            text-align: center;
        }

        .card-title {
            color: #d32f2f;
            font-size: 1.5em;
            font-weight: 700;
            margin-bottom: 15px;
        }

        .card-text {
            color: #424242;
            font-size: 1.1em;
            margin-bottom: 20px;
        }

        .card-footer {
            background: linear-gradient(135deg, #e14a4a 0%, #ff6b6b 100%);
            border: none;
            padding: 20px;
        }

        .card-footer .btn {
            background: #ffffff;
            color: #d32f2f;
            border: 2px solid #d32f2f;
            padding: 12px 30px;
            border-radius: 25px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }

        .card-footer .btn:hover {
            background: #d32f2f;
            color: #ffffff;
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(211, 47, 47, 0.3);
        }

        /* Sección de alianzas */
        .alliances-section {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 25px;
            padding: 40px;
            margin: 40px auto;
            max-width: 800px;
            text-align: center;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            animation: fadeInUp 1.8s ease-out;
        }

        .alliance-item {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 20px 0;
            transition: transform 0.3s ease;
        }

        .alliance-item:hover {
            transform: scale(1.05);
        }

        .alliance-item img {
            max-height: 80px;
            margin: 0 20px;
            filter: brightness(0.9);
            transition: filter 0.3s ease;
        }

        .alliance-item:hover img {
            filter: brightness(1);
        }

        /* Sección conócenos */
        .about-section {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 25px;
            padding: 50px;
            margin: 40px auto;
            max-width: 1200px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            animation: fadeInUp 2s ease-out;
        }

        .about-content {
            display: flex;
            align-items: center;
            gap: 40px;
        }

        .about-image {
            flex: 1;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        }

        .about-image img {
            width: 100%;
            height: 400px;
            object-fit: cover;
            transition: transform 0.6s ease;
        }

        .about-image:hover img {
            transform: scale(1.05);
        }

        .about-text {
            flex: 1;
            padding: 30px;
            background: linear-gradient(135deg, #e14a4a 0%, #ff6b6b 100%);
            border-radius: 20px;
            color: #ffffff;
        }

        .about-text h3 {
            font-size: 2.2em;
            font-weight: 700;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            color: #ffffff;
        }

        .about-text p {
            font-size: 1.2em;
            line-height: 1.8;
            font-weight: 300;
            color: #ffffff;
        }

        /* Animaciones */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Partículas flotantes */
        .floating-particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .particle {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 8s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-30px) rotate(180deg); }
        }

        /* Responsividad */
        @@media (max-width: 768px) {
            .hero-section {
                height: 40vh;
                min-height: 300px;
            }

            .carousel-caption h1 {
                font-size: 2.5em;
            }

            .section-title {
                font-size: 2.2em;
            }

            .about-content {
                flex-direction: column;
                gap: 20px;
            }

            .navigation-buttons {
                padding: 20px;
                margin: 20px;
            }

            .btn-modern {
                padding: 12px 25px;
                font-size: 1em;
                margin: 5px;
            }
        }

        @@media (max-width: 480px) {
            .carousel-caption h1 {
                font-size: 2em;
            }

            .section-title {
                font-size: 1.8em;
            }

            .btn-modern {
                width: 100%;
                margin: 5px 0;
            }
        }
    </style>
</head>
