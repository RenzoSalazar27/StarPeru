@{
    ViewData["Title"] = "Oficinas";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes" />
    <link href="~/css/Home/oficinas.css" rel="stylesheet" />
</head>
<body>

    <section class="header-section">
        <h1 class="title">OFICINAS COMERCIALES <i class="bi bi-building"></i></h1>
    </section>

    <div class="oficinas-container">
        <!-- Sección Lima -->
        <div class="oficina-item">
            <div class="oficina-header" onclick="toggleSection('lima')">
                <h3>LIMA</h3>
                <span class="toggle-icon" id="toggle-lima">&#9662;</span>
            </div>
            <div class="oficina-content" id="lima">
                <p><strong>Oficina Principal:</strong></p>
                <p>Av. José Pardo 495, Miraflores</p>
                <p><strong>Horario de atención:</strong></p>
                <p>Lun – Vie 09:00 a 13:00 – 14:00 a 18:00 hrs.</p>
                <p>Sábado 09:00 – 13:00 hrs.</p>
                <p>Domingos y feriados no hay atención.</p>
            </div>
        </div>

        <!-- Sección Provincias -->
        <div class="oficina-item">
            <div class="oficina-header" onclick="toggleSection('provincias')">
                <h3>PROVINCIAS</h3>
                <span class="toggle-icon" id="toggle-provincias">&#9662;</span>
            </div>
            <div class="oficina-content" id="provincias">
                <!-- Oficina Iquitos -->
                <p><strong>Oficina Iquitos:</strong></p>
                <p>Dirección: Calle Ejemplo 123, Iquitos</p>
                <p><strong>Horario de atención:</strong></p>
                <p>Lun – Vie 09:00 a 13:00 – 14:00 a 18:00 hrs.</p>
                <p>Sábado 09:00 – 13:00 hrs.</p>
                <p>Domingos y feriados no hay atención.</p>

                <!-- Oficina Arequipa -->
                <p><strong>Oficina Arequipa:</strong></p>
                <p>Dirección: Calle Ejemplo 456, Arequipa</p>
                <p><strong>Horario de atención:</strong></p>
                <p>Lun – Vie 09:00 a 13:00 – 14:00 a 18:00 hrs.</p>
                <p>Sábado 09:00 – 13:00 hrs.</p>
                <p>Domingos y feriados no hay atención.</p>

                <!-- Oficina Trujillo -->
                <p><strong>Oficina Trujillo:</strong></p>
                <p>Dirección: Av. España 789, Trujillo</p>
                <p><strong>Horario de atención:</strong></p>
                <p>Lun – Vie 09:00 a 13:00 – 14:00 a 18:00 hrs.</p>
                <p>Sábado 09:00 – 13:00 hrs.</p>
                <p>Domingos y feriados no hay atención.</p>

                <!-- Oficina Chiclayo -->
                <p><strong>Oficina Chiclayo:</strong></p>
                <p>Dirección: Calle Comercio 101, Chiclayo</p>
                <p><strong>Horario de atención:</strong></p>
                <p>Lun – Vie 09:00 a 13:00 – 14:00 a 18:00 hrs.</p>
                <p>Sábado 09:00 – 13:00 hrs.</p>
                <p>Domingos y feriados no hay atención.</p>
            </div>
        </div>

        <!-- Sección Extranjero -->
        <div class="oficina-item">
            <div class="oficina-header" onclick="toggleSection('extranjero')">
                <h3>EXTRANJERO</h3>
                <span class="toggle-icon" id="toggle-extranjero">&#9662;</span>
            </div>
            <div class="oficina-content" id="extranjero">
                <p><strong>Oficina Bogotá:</strong></p>
                <p>Dirección: Calle 26 #85D-55, Bogotá, Colombia</p>
                <p><strong>Horario de atención:</strong></p>
                <p>Lun – Vie 09:00 a 13:00 – 14:00 a 18:00 hrs.</p>
                <p>Sábado 09:00 – 13:00 hrs.</p>
                <p>Domingos y feriados no hay atención.</p>
            </div>
        </div>
    </div>

    <!-- Script para manejo de despliegue -->
    <script>
        function toggleSection(sectionId) {
            var content = document.getElementById(sectionId);
            var icon = document.getElementById('toggle-' + sectionId);

            if (content.style.display === "none" || content.style.display === "") {
                content.style.display = "block";
                icon.innerHTML = "&#9650;";  // Flecha hacia arriba
            } else {
                content.style.display = "none";
                icon.innerHTML = "&#9662;";  // Flecha hacia abajo
            }
        }
    </script>

</body>
</html>
