@{
    ViewData["Title"] = "Seleccionar Tipo de Inicio de Sesión";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Seleccione tipo de inicio de sesión</h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Home" asp-action="Autenticacion" class="btn btn-outline-primary btn-lg w-100">
                                <i class="fas fa-user"></i> Usuario
                            </a>
                        </div>
                        <div class="col-md-6 mb-3">
                            <a asp-controller="Admin" asp-action="Login" class="btn btn-outline-secondary btn-lg w-100">
                                <i class="fas fa-user-shield"></i> Administrador
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 