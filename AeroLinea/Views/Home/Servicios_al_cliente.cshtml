@{
    ViewData["Title"] = "Servicios al Cliente";
    var userType = Context.Session.GetString("UserType");
    var userId = Context.Session.GetInt32("UserId");
    var consultas = ViewBag.Consultas as List<AeroLinea.Models.Consulta>;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes" />
    <title>Servicio al Cliente - StarPerú</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background: linear-gradient(135deg, #e14a4a 0%, #ff6b6b 25%, #FF2E4E 50%, #2c3e50 75%, #34495e 100%);
            background-size: 400% 400%;
            animation: gradientShift 20s ease infinite;
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            overflow-x: hidden;
        }

        @@keyframes gradientShift {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Header moderno */
        .page-header {
            text-align: center;
            margin-bottom: 40px;
            animation: fadeInUp 1s ease-out;
        }

        .page-title {
            color: white;
            font-size: 3.5em;
            font-weight: 800;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            margin-bottom: 10px;
            background: linear-gradient(45deg, #fff, #f0f0f0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .page-subtitle {
            color: rgba(255,255,255,0.9);
            font-size: 1.2em;
            font-weight: 300;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
        }

        /* Tarjetas modernas */
        .card {
            border: none;
            border-radius: 20px;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            box-shadow: 0 15px 35px rgba(0,0,0,0.1);
            margin-bottom: 30px;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            border: 1px solid rgba(255, 255, 255, 0.2);
            animation: fadeInUp 0.8s ease-out;
        }

        .card:nth-child(1) { animation-delay: 0.1s; }
        .card:nth-child(2) { animation-delay: 0.2s; }
        .card:nth-child(3) { animation-delay: 0.3s; }

        .card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 25px 50px rgba(0,0,0,0.2);
        }

        .card-body {
            padding: 35px;
        }

        .card-title {
            color: #e14a4a;
            font-size: 2em;
            font-weight: 700;
            margin-bottom: 25px;
            border-bottom: 3px solid #ff6b6b;
            padding-bottom: 15px;
            position: relative;
        }

        .card-title::after {
            content: '';
            position: absolute;
            bottom: -3px;
            left: 0;
            width: 50px;
            height: 3px;
            background: linear-gradient(90deg, #e14a4a, #ff6b6b);
            border-radius: 2px;
        }

        /* Formularios modernos */
        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 10px;
            font-size: 1.1em;
        }

        .form-control, .form-select {
            border-radius: 12px;
            border: 2px solid rgba(225, 74, 74, 0.2);
            padding: 15px;
            font-size: 1em;
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.9);
        }

        .form-control:focus, .form-select:focus {
            border-color: #e14a4a;
            box-shadow: 0 0 0 0.3rem rgba(225, 74, 74, 0.15);
            background: white;
            transform: translateY(-2px);
        }

        .btn-primary {
            background: linear-gradient(135deg, #e14a4a 0%, #ff6b6b 100%);
            border: none;
            padding: 15px 40px;
            font-size: 1.2em;
            font-weight: 600;
            border-radius: 50px;
            transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
        }

        .btn-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s ease;
        }

        .btn-primary:hover::before {
            left: 100%;
        }

        .btn-primary:hover {
            transform: translateY(-3px) scale(1.05);
            box-shadow: 0 10px 25px rgba(225, 74, 74, 0.4);
        }

        /* Panel de título moderno */
        .titulo-panel {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 25px;
            padding: 40px;
            margin-bottom: 40px;
            text-align: center;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            animation: fadeInUp 1s ease-out;
        }

        .titulo-panel h1 {
            color: white;
            font-size: 3em;
            font-weight: 800;
            margin: 0;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            background: linear-gradient(45deg, #fff, #f0f0f0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Acordeón moderno */
        .accordion {
            margin-bottom: 40px;
        }

        .accordion-item {
            border: none;
            margin-bottom: 20px;
            border-radius: 15px !important;
            overflow: hidden;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .accordion-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.15);
        }

        .accordion-button {
            background: linear-gradient(135deg, #e14a4a 0%, #ff6b6b 100%);
            color: white;
            font-weight: 600;
            padding: 25px;
            border-radius: 15px !important;
            font-size: 1.2em;
            transition: all 0.3s ease;
        }

        .accordion-button:not(.collapsed) {
            background: linear-gradient(135deg, #FF2E4E 0%, #e14a4a 100%);
            color: white;
            transform: scale(1.02);
        }

        .accordion-button:focus {
            box-shadow: none;
            border-color: rgba(255, 255, 255, 0.3);
        }

        .accordion-button::after {
            filter: brightness(0) invert(1);
        }

        .accordion-body {
            background: rgba(255, 255, 255, 0.95);
            padding: 25px;
            color: #333;
            font-size: 1.1em;
            line-height: 1.6;
        }

        /* Alertas modernas */
        .alert {
            border-radius: 15px;
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            padding: 20px 25px;
            font-weight: 500;
            backdrop-filter: blur(10px);
        }

        .alert-success {
            background: rgba(40, 167, 69, 0.95);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .alert-danger {
            background: rgba(220, 53, 69, 0.95);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .alert-info {
            background: rgba(23, 162, 184, 0.95);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .btn-close {
            filter: brightness(0) invert(1);
            opacity: 0.8;
            transition: opacity 0.3s ease;
        }

        .btn-close:hover {
            opacity: 1;
        }

        /* Mensaje de administrador */
        .admin-message {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 25px;
            padding: 50px;
            margin: 40px 0;
            text-align: center;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            animation: fadeInUp 1s ease-out;
        }

        .admin-message h1 {
            color: white;
            font-size: 3em;
            font-weight: 800;
            margin-bottom: 30px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            background: linear-gradient(45deg, #fff, #f0f0f0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Tabla moderna */
        .table-responsive {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            backdrop-filter: blur(10px);
        }

        .table {
            margin-bottom: 0;
        }

        .table thead th {
            background: linear-gradient(135deg, #e14a4a 0%, #ff6b6b 100%);
            color: white;
            font-weight: 600;
            padding: 20px;
            border: none;
            font-size: 1.1em;
        }

        .table tbody td {
            padding: 20px;
            vertical-align: middle;
            border-bottom: 1px solid rgba(0,0,0,0.1);
            font-weight: 500;
        }

        .table tbody tr {
            transition: all 0.3s ease;
        }

        .table tbody tr:hover {
            background: rgba(225, 74, 74, 0.05);
            transform: scale(1.01);
        }

        /* Badges modernos */
        .badge {
            padding: 10px 15px;
            border-radius: 25px;
            font-weight: 600;
            font-size: 0.9em;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .bg-success {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%) !important;
        }

        .bg-warning {
            background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%) !important;
            color: #000 !important;
        }

        .bg-danger {
            background: linear-gradient(135deg, #dc3545 0%, #e74c3c 100%) !important;
        }

        .bg-info {
            background: linear-gradient(135deg, #17a2b8 0%, #6f42c1 100%) !important;
        }

        /* Partículas flotantes */
        .floating-particles {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
        }

        .particle {
            position: absolute;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50%;
            animation: float 8s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-30px) rotate(180deg); }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsividad */
        @@media (max-width: 768px) {
            .page-title {
                font-size: 2.5em;
            }

            .titulo-panel h1 {
                font-size: 2.2em;
            }

            .card-body {
                padding: 25px;
            }

            .card-title {
                font-size: 1.6em;
            }

            .admin-message h1 {
                font-size: 2.2em;
            }

            .admin-message {
                padding: 30px 20px;
            }
        }

        @@media (max-width: 480px) {
            .page-title {
                font-size: 2em;
            }

            .titulo-panel h1 {
                font-size: 1.8em;
            }

            .card-body {
                padding: 20px;
            }

            .btn-primary {
                width: 100%;
                padding: 15px 20px;
            }
        }
    </style>
</head>
<body>
    <!-- Partículas flotantes -->
    <div class="floating-particles" id="particles"></div>

    @if (userType == "admin")
    {
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="admin-message">
                        <h1 class="display-4 fw-bold">
                            <i class="fas fa-crown me-3"></i>
                            Panel de Administrador
                        </h1>
                        <p class="text-white fs-5">Usted tiene acceso completo al sistema</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (userId == null)
    {
        <div class="container mt-5">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="admin-message">
                        <h1 class="display-4 fw-bold">
                            <i class="fas fa-lock me-3"></i>
                            Acceso Requerido
                        </h1>
                        <p class="text-white fs-5 mb-4">Debe iniciar sesión para acceder a esta sección</p>
                        <a href="/Home/Login" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Ir a Iniciar Sesión
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="container mt-4">
            <div class="page-header">
                <h1 class="page-title">
                    <i class="fas fa-headset me-3"></i>
                    Servicio al Cliente
                </h1>
                <p class="page-subtitle">Estamos aquí para ayudarte con cualquier consulta o inquietud</p>
            </div>

            <!-- Mensajes de alerta -->
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["Mensaje"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fas fa-paper-plane me-2"></i>
                                Envíanos tu consulta
                            </h5>
                            <form method="post" asp-action="RegistrarConsulta">
                                <div class="mb-4">
                                    <label for="motivoConsulta" class="form-label">
                                        <i class="fas fa-tag me-2"></i>
                                        Motivo de la consulta
                                    </label>
                                    <select class="form-select" id="motivoConsulta" name="motivoConsulta" required>
                                        <option value="">Seleccione un motivo</option>
                                        <option value="Vuelos">Vuelos</option>
                                        <option value="Cambios">Cambios</option>
                                        <option value="Reclamos">Reclamos</option>
                                        <option value="Sugerencias">Sugerencias</option>
                                        <option value="Otros">Otros</option>
                                    </select>
                                </div>
                                <div class="mb-4">
                                    <label for="descripcionConsultas" class="form-label">
                                        <i class="fas fa-comment me-2"></i>
                                        Descripción
                                    </label>
                                    <textarea class="form-control" id="descripcionConsultas" name="descripcionConsultas" rows="4" required></textarea>
                                </div>
                                <div class="mb-4">
                                    <label for="urgencia" class="form-label">
                                        <i class="fas fa-exclamation me-2"></i>
                                        Nivel de urgencia
                                    </label>
                                    <select class="form-select" id="urgencia" name="urgencia" required>
                                        <option value="">Seleccione el nivel de urgencia</option>
                                        <option value="Bajo">Bajo</option>
                                        <option value="Medio">Medio</option>
                                        <option value="Alto">Alto</option>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-paper-plane me-2"></i>
                                    Enviar consulta
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Nueva sección para mostrar las consultas del usuario -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="fas fa-list me-2"></i>
                                Mis Consultas
                            </h5>
                            @if (consultas != null && consultas.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th><i class="fas fa-hashtag me-2"></i>ID</th>
                                                <th><i class="fas fa-tag me-2"></i>Motivo</th>
                                                <th><i class="fas fa-comment me-2"></i>Descripción</th>
                                                <th><i class="fas fa-exclamation me-2"></i>Urgencia</th>
                                                <th><i class="fas fa-info-circle me-2"></i>Estado</th>
                                                <th><i class="fas fa-reply me-2"></i>Respuesta</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var consulta in consultas)
                                            {
                                                <tr>
                                                    <td>@consulta.idConsulta</td>
                                                    <td>@consulta.motivoConsulta</td>
                                                    <td>@consulta.descripcionConsultas</td>
                                                    <td>
                                                        <span class="badge @(consulta.urgencia == "Alto" ? "bg-danger" : 
                                                                        consulta.urgencia == "Medio" ? "bg-warning" : 
                                                                        "bg-info")">
                                                            @consulta.urgencia
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span class="badge @(consulta.estado == "Resuelto" ? "bg-success" : "bg-warning")">
                                                            @consulta.estado
                                                        </span>
                                                    </td>
                                                    <td>
                                                        @if (consulta.estado == "Resuelto")
                                                        {
                                                            @(string.IsNullOrEmpty(consulta.comentarioConsulta) ? "Sin comentarios" : consulta.comentarioConsulta)
                                                        }
                                                        else
                                                        {
                                                            <span class="text-muted">
                                                                <i class="fas fa-clock me-1"></i>
                                                                Pendiente de respuesta
                                                            </span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info">
                                    <i class="fas fa-info-circle me-2"></i>
                                    No tienes consultas registradas.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="page-header">
                <h1 class="page-title">
                    <i class="fas fa-question-circle me-3"></i>
                    Preguntas Frecuentes
                </h1>
                <p class="page-subtitle">Encuentra respuestas rápidas a las consultas más comunes</p>
            </div>

            <div class="accordion" id="faqAccordion">
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingOne">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne">
                            <i class="fas fa-plane me-2"></i>
                            ¿Cómo puedo cambiar mi vuelo?
                        </button>
                    </h2>
                    <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            <i class="fas fa-info-circle me-2 text-primary"></i>
                            Puedes cambiar tu vuelo a través de nuestra página web en la sección "Mis Reservas".
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingTwo">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo">
                            <i class="fas fa-ticket-alt me-2"></i>
                            ¿Qué debo hacer si perdí mi boleto?
                        </button>
                    </h2>
                    <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            <i class="fas fa-info-circle me-2 text-primary"></i>
                            Si perdiste tu boleto, por favor contáctanos a nuestro servicio al cliente para asistencia.
                        </div>
                    </div>
                </div>
                <div class="accordion-item">
                    <h2 class="accordion-header" id="headingThree">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree">
                            <i class="fas fa-undo me-2"></i>
                            ¿Cómo puedo obtener un reembolso?
                        </button>
                    </h2>
                    <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                        <div class="accordion-body">
                            <i class="fas fa-info-circle me-2 text-primary"></i>
                            Para solicitar un reembolso, visita la sección de "Reembolsos" en nuestra página web.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Crear partículas flotantes
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 20;

            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.top = Math.random() * 100 + '%';
                particle.style.width = Math.random() * 10 + 5 + 'px';
                particle.style.height = particle.style.width;
                particle.style.animationDelay = Math.random() * 8 + 's';
                particle.style.animationDuration = (Math.random() * 4 + 4) + 's';
                particlesContainer.appendChild(particle);
            }
        }

        // Inicializar efectos visuales
        document.addEventListener('DOMContentLoaded', function() {
            createParticles();
            
            // Auto-cerrar alertas después de 5 segundos
            setTimeout(function() {
                var alerts = document.querySelectorAll('.alert');
                alerts.forEach(function(alert) {
                    var bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);
        });
    </script>
</body>
</html>
