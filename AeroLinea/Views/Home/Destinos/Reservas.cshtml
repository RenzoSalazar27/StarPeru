@model List<AeroLinea.Models.ReservaVuelo>

@{
    ViewData["Title"] = "Mis Reservas";
    var userId = Context.Session.GetInt32("UserId");
    var userType = Context.Session.GetString("UserType");
}

<style>
    body {
        background: linear-gradient(135deg, #e14a4a 0%, #ff6b6b 100%);
        min-height: 100vh;
        padding: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .header-section {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 25px;
        padding: 40px 30px;
        margin-bottom: 40px;
        text-align: center;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        position: relative;
        overflow: hidden;
    }

    .header-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
        transition: left 0.6s ease;
    }

    .header-section:hover::before {
        left: 100%;
    }

    .header-section h2 {
        color: white;
        font-size: 3em;
        margin: 0;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        position: relative;
        z-index: 1;
    }

    .alert {
        background: rgba(255, 255, 255, 0.95);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .alert::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #e14a4a, #ff6b6b);
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    .alert:hover::before {
        transform: scaleX(1);
    }

    .alert:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.15);
    }

    .alert h4 {
        color: #e14a4a;
        font-size: 1.6em;
        margin-bottom: 20px;
        font-weight: 600;
        position: relative;
        z-index: 1;
    }

    .alert p {
        color: #555;
        font-size: 1.1em;
        margin-bottom: 25px;
        line-height: 1.6;
        position: relative;
        z-index: 1;
    }

    .btn-primary {
        background: linear-gradient(45deg, #e14a4a, #ff6b6b);
        border: none;
        padding: 15px 35px;
        font-size: 1.1em;
        font-weight: 600;
        border-radius: 12px;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(225, 74, 74, 0.3);
        position: relative;
        overflow: hidden;
    }

    .btn-primary::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s ease;
    }

    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(225, 74, 74, 0.4);
        background: linear-gradient(45deg, #ff6b6b, #e14a4a);
    }

    .btn-primary:hover::before {
        left: 100%;
    }

    .table-responsive {
        background: rgba(255, 255, 255, 0.95);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        padding: 25px;
        box-shadow: 0 15px 35px rgba(0,0,0,0.1);
        overflow: hidden;
        position: relative;
    }

    .table-responsive::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 6px;
        background: linear-gradient(90deg, #e14a4a, #ff6b6b, #e14a4a);
        background-size: 200% 100%;
        animation: gradientShift 3s ease infinite;
    }

    @@keyframes gradientShift {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    .table {
        margin-bottom: 0;
        border-collapse: separate;
        border-spacing: 0;
    }

    .table thead th {
        background: linear-gradient(45deg, #e14a4a, #ff6b6b);
        color: white;
        font-weight: 600;
        border: none;
        padding: 18px 15px;
        font-size: 1.1em;
        position: relative;
        transition: all 0.3s ease;
    }

    .table thead th:first-child {
        border-top-left-radius: 12px;
    }

    .table thead th:last-child {
        border-top-right-radius: 12px;
    }

    .table thead th:hover {
        background: linear-gradient(45deg, #ff6b6b, #e14a4a);
        transform: translateY(-1px);
    }

    .table tbody td {
        padding: 18px 15px;
        vertical-align: middle;
        color: #555;
        border-bottom: 1px solid rgba(0,0,0,0.08);
        transition: all 0.3s ease;
        position: relative;
    }

    .table tbody tr {
        transition: all 0.3s ease;
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease forwards;
    }

    .table tbody tr:nth-child(1) { animation-delay: 0.1s; }
    .table tbody tr:nth-child(2) { animation-delay: 0.2s; }
    .table tbody tr:nth-child(3) { animation-delay: 0.3s; }
    .table tbody tr:nth-child(4) { animation-delay: 0.4s; }
    .table tbody tr:nth-child(5) { animation-delay: 0.5s; }

    @@keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .table tbody tr:hover {
        background: linear-gradient(135deg, rgba(225, 74, 74, 0.05) 0%, rgba(255, 107, 107, 0.05) 100%);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .table tbody tr:hover td {
        color: #333;
    }

    .btn-info {
        background: linear-gradient(45deg, #e14a4a, #ff6b6b);
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        transition: all 0.3s ease;
        font-weight: 500;
        box-shadow: 0 3px 10px rgba(225, 74, 74, 0.2);
        position: relative;
        overflow: hidden;
    }

    .btn-info::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.3s ease;
    }

    .btn-info:hover {
        background: linear-gradient(45deg, #ff6b6b, #e14a4a);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(225, 74, 74, 0.3);
    }

    .btn-info:hover::before {
        left: 100%;
    }

    .badge {
        padding: 8px 12px;
        font-size: 0.9em;
        font-weight: 600;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .badge.bg-success {
        background: linear-gradient(45deg, #28a745, #20c997) !important;
        box-shadow: 0 2px 8px rgba(40, 167, 69, 0.3);
    }

    .badge.bg-warning {
        background: linear-gradient(45deg, #ffc107, #fd7e14) !important;
        box-shadow: 0 2px 8px rgba(255, 193, 7, 0.3);
    }

    .badge:hover {
        transform: scale(1.05);
    }

    .admin-message {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 25px;
        padding: 40px 30px;
        margin: 20px 0;
        text-align: center;
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        position: relative;
        overflow: hidden;
    }

    .admin-message::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
        transition: left 0.6s ease;
    }

    .admin-message:hover::before {
        left: 100%;
    }

    .admin-message h1 {
        color: white;
        font-size: 2.8em;
        margin-bottom: 20px;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
        position: relative;
        z-index: 1;
    }

    @@media (max-width: 768px) {
        .container {
            padding: 10px;
        }

        .header-section {
            padding: 30px 20px;
            margin-bottom: 20px;
            border-radius: 20px;
        }

        .header-section h2 {
            font-size: 2.2em;
        }

        .alert {
            padding: 25px;
            border-radius: 15px;
        }

        .table-responsive {
            padding: 20px;
            border-radius: 15px;
        }

        .table thead th {
            font-size: 1em;
            padding: 12px 8px;
        }

        .table tbody td {
            padding: 12px 8px;
            font-size: 0.9em;
        }

        .btn-info {
            padding: 8px 15px;
            font-size: 0.9em;
        }

        .admin-message {
            padding: 30px 20px;
            border-radius: 20px;
        }

        .admin-message h1 {
            font-size: 2.2em;
        }
    }
</style>

@if (userType == "admin")
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="admin-message">
                    <h1 class="display-4 fw-bold">Usted tiene rol administrador</h1>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="header-section">
            <h2>Mis Reservas</h2>
        </div>

        @if (!userId.HasValue)
        {
            <div class="alert">
                <h4>Debes iniciar sesi√≥n para ver tus reservas</h4>
                <p>Por favor, inicia sesi√≥n para acceder a tus reservas de vuelo.</p>
                <a href="@Url.Action("Login", "Home")" class="btn btn-primary">Iniciar Sesi√≥n</a>
            </div>
        }
        else if (Model == null || !Model.Any())
        {
            <div class="alert">
                <h4>No tienes reservas</h4>
                <p>A√∫n no has realizado ninguna reserva de vuelo.</p>
                <a href="@Url.Action("Destinos", "Home")" class="btn btn-primary">Ver Vuelos Disponibles</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Origen</th>
                            <th>Destino</th>
                            <th>Pasajeros</th>
                            <th>Mascotas</th>
                            <th>Precio Total</th>
                            <th>Estado de Pago</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reserva in Model)
                        {
                            <tr>
                                <td>@reserva.idResVuelo</td>
                                <td>@reserva.origenResVue</td>
                                <td>@reserva.destinoVuelo</td>
                                <td>@reserva.personasResVue</td>
                                <td>@reserva.mascotasResVue</td>
                                <td>S/ @reserva.precioVuelo.ToString("N2")</td>
                                <td>
                                    <span class="badge @(reserva.pagadoVuelo ? "bg-success" : "bg-warning")">
                                        @(reserva.pagadoVuelo ? "Pagado" : "Pendiente")
                                    </span>
                                </td>
                                <td>
                                    <a href="@Url.Action("DetalleReserva", "Home", new { id = reserva.idResVuelo })" class="btn btn-info">Ver Detalles</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        function realizarPago(idReserva) {
            if (confirm('¬øDesea proceder con el pago de esta reserva?')) {
                window.location.href = `/Home/RealizarPago/${idReserva}`;
            }
        }

        function verDetalles(idReserva) {
            window.location.href = `/Home/DetallesReserva/${idReserva}`;
        }
    </script>
} 