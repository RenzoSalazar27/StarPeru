@model List<AeroLinea.Models.Vuelo>
@{
    ViewData["Title"] = "Vuelos Disponibles";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Vuelos Disponibles a @ViewBag.Destino</h2>
    
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var vuelo in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Vuelo de @vuelo.origenVuelo a @vuelo.destinoVuelo</h5>
                            <p class="card-text">
                                <strong>Fecha:</strong> @vuelo.fechaVuelo.ToString("dd/MM/yyyy HH:mm")<br>
                                <strong>Precio:</strong> S/ @vuelo.precioVuelo.ToString("N2")
                            </p>
                            <button class="btn btn-primary" onclick="volar(@vuelo.idVuelo)">Volar</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No hay vuelos disponibles para este destino en este momento.
        </div>
    }
</div>

