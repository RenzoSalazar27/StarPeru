@{
    ViewData["Title"] = "Panel Administrativo";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Panel Administrativo</h2>
                <a asp-action="Logout" class="btn btn-danger">Cerrar Sesión</a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Gestión de Vuelos</h5>
                    <p class="card-text">Administrar los vuelos disponibles</p>
                    <a href="#" class="btn btn-primary">Gestionar</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Reservaciones</h5>
                    <p class="card-text">Ver todas las reservaciones</p>
                    <a href="#" class="btn btn-primary">Gestionar</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Reportes</h5>
                    <p class="card-text">Ver reportes y estadísticas</p>
                    <a href="#" class="btn btn-primary">Ver Reportes</a>
                </div>
            </div>
        </div>
    </div>
</div> 